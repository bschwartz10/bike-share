<h1>Edit Station</h1>

<form class="well" action="/stations/<%= @station.id %>" method="post">
  <input type="hidden" name="_method" value="PUT" />
  <div class="form-group">
    <label>Name</label>
    <input type='text'  class="form-control" name='station[name]' value="<%= @station.name %>"/><br>
  </div>
  <div class="form-group">
    <label>City</label>
    <input type='text'  class="form-control" name='station[city]' value="<%= @station.city.name %>"/><br>
  </div>
  <div class="form-group">
    <label>Dock Count</label>
    <input type='number'  class="form-control" name='station[dock_count]' value="<%= @station.dock_count %>"/><br>
  </div>
  <div class="form-group">
    <label>Installation Date</label>
    <input type='date'  class="form-control" name='station[installation_date]' value=<%=@station.installation_date.strftime('%Y-%m-%d')%> /><br>
  </div>
  <input type='submit' class="btn btn-primary" value='Submit'>
</form>
