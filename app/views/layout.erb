    <script type="text/javascript">
      google.charts.load("current", {packages:["corechart"]});
      google.charts.setOnLoadCallback(drawMonthBreakdownRidesChart);

      function drawMonthBreakdownRidesChart() {
      var data = google.visualization.arrayToDataTable([
          ['Month', 'Rides', { role: "style" }],
          ["January", 263, "#a93226"],
          ["February", 204, "#ca6f1e"],
          ["March", 255, "#f1c40f"],
          ["April", 271, "#27ae60"],
          ["May", 293, "#1abc9c"],
          ["June", 308, "#2980b9"],
          ["July", 321, "#8e44ad"],
          ["August", 321, "#a93226"],
          ["September", 325, "#ca6f1e"],
          ["October", 348, "#f1c40f"],
          ["November", 253, "#27ae60"],
          ["December", 206, "#1abc9c"]
        ]);

      var view = new google.visualization.DataView(data);
      view.setColumns([0, 1,
                       { calc: "stringify",
                         sourceColumn: 1,
                         type: "string",
                         role: "annotation" },
                       2]);

      var options = {
        title: "Number of Rides per Month for 2014",
        width: 600,
        height: 400,
        bar: {groupWidth: "95%"},
        legend: { position: "none" },
      };
      var chart = new google.visualization.ColumnChart(document.getElementById("month_by_month"));
      chart.draw(view, options);
    }

    </script>
